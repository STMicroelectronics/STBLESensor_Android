<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimaryDark"
    android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
    app:elevation="@dimen/default_elevation"
    app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/actionbar_text"
            style="@style/StActionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/extra_margin"
            android:layout_toEndOf="@id/left_action"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:layout_marginLeft="@dimen/extra_margin"
            android:layout_toRightOf="@id/left_action" />

        <ImageView
            android:id="@+id/right_action"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
