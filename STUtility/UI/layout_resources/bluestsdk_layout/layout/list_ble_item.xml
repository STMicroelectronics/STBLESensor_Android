<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nodeRunningCodeName"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="4dp"
        tools:text="Firmware Name"
        android:paddingEnd="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:visibility="visible"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nodeRunningLabel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="First Label"
        android:layout_marginTop="4dp"
        android:gravity="left"
        tools:visibility="visible"
        android:visibility="gone"
        android:paddingEnd="16dp"/>

    <TextView
        android:id="@+id/nodeRunningLabel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Second Label"
        android:gravity="left"
        tools:visibility="visible"
        android:visibility="gone"
        android:paddingEnd="16dp"/>

    <TextView
        android:id="@+id/nodeRunningLabel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Third Label"
        android:layout_marginTop="4dp"
        android:gravity="left"
        tools:visibility="visible"
        android:visibility="gone"
        android:paddingEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isSleepingIcon"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_sleeping_24dp"
            tools:visibility="visible"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/hasExtensionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_extra_gp_24dp"
            tools:visibility="visible"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/nodeRunningIcon1"
            tools:srcCompat="@drawable/about_button_icon"
            tools:visibility="visible"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/nodeRunningIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_sleeping_24dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/nodeRunningIcon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_sleeping_24dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/nodeAddedIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_not_favorite"
            app:tint="@color/colorPrimary"
            tools:srcCompat="@drawable/ic_sleeping_24dp"/>
    </LinearLayout>

</LinearLayout>