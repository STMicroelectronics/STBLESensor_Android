<resources>

    <style name="STStyleCardView" parent="CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="STStyleButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnAccent</item>
    </style>

    <style name="STStyleButtonRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_background</item>
        <item name="android:textColor">@color/colorOnAccent</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="BlueSTSDKInputTypeStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="DialogWithOutTitle" parent="Theme.BlueMS">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>