<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/double_padding">

        <ImageView
            android:id="@+id/output_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bluetooth"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/flow_name_textview"
            style="@style/Text.Subtitle.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/default_padding"/>

        <ImageView
            android:id="@+id/upload_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_upload"
            app:tint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/delete_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_maring"
            app:srcCompat="@drawable/ic_delete"
            app:tint="@color/debugConsole_errorMsg"
            android:layout_marginLeft="@dimen/double_maring" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
