<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accEventMultipleEventLayout"
    grid:columnCount="@integer/accEvent_grid_columns"
    grid:orientation="horizontal"
    grid:rowCount="@integer/accEvent_grid_rows">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_orientationIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_orientation"
            android:src="@drawable/acc_event_orientation_up"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_orientation"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_pedometerIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_pedometer"
            android:src="@drawable/acc_event_pedometer"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_pedometer"
            android:id="@+id/accEvent_multiple_pedometerText"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_tapIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_tap"
            android:src="@drawable/acc_event_tap_single"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_tap"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_freeFallIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_freefall"
            android:src="@drawable/acc_event_free_fall"
            android:layout_weight="1"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_freefall"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_wakeUpIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_wakeUp"
            android:src="@drawable/acc_event_wake_up"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_wakeUp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1">

        <ImageView
            android:id="@+id/accEvent_multiple_tiltIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/accEvent_tilt"
            android:src="@drawable/acc_event_tilt"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/accEvent_tilt"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>



</android.support.v7.widget.GridLayout>